@{
    var acomodacao = @ViewBag.Acomodacao as Acomodacao;
}

@model Avaliacao;

<div class="row">
    <div class="col-12 col-md-10 offset-md-1 offset-lg-0 col-lg-7 col-xl-6 offset-xl-1">
        <div class="border-1 border rounded-3 secao p-3 fit-content text-center">

            <h3>Nome do Quarto/Pousada, nº</h3>
            <div id="carouselExampleIndicators" class="carousel slide mb-3" data-bs-ride="true">
                @if (acomodacao.QtdeImagens == 0)

                {
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/imgnotfound.png" class="d-block w-100" alt="...">
                        </div>
                    </div>

                }
                <div class="carousel-indicators">
                    @for (int i = 0; i < @acomodacao.QtdeImagens; i++)

                    {

                        if (i == 0)

                        {
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"
                        class="active" aria-current="true" aria-label="Slide @i+1"></button>

                        }

                        else

                        {
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"
                        aria-label="Slide @i+1"></button>

                        }

                    }
                </div>
                <div class="carousel-inner">
                    @{
                        int j = 0;

                    }
                    @foreach (var imagem in @ViewBag.Imagens)

                    {

                        var caminhoimagem = imagem;

                        if (j == 0)

                        {
                            <div class="carousel-item active">
                                <img src="@caminhoimagem" class="d-block w-100" alt="...">
                            </div>

                        }

                        else

                        {
                            <div class="carousel-item">
                                <img src="@caminhoimagem" class="d-block w-100" alt="...">
                            </div>

                        }

                        j++;

                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <h3>Inclui:</h3>
            <input type="checkbox" id="suite" name="suite" checked>
            <label for="suite">Suíte</label>
            <input type="checkbox" id="animais" name="animais" checked>
            <label for="animais">Permitido animais</label>
            <input type="checkbox" id="cafe" name="cafe" checked>
            <label for="cafe">Café da manhã</label>
            <input type="checkbox" id="wifi" name="wifi" checked>
            <label for="wifi">Wi-fi</label>

        </div>

    </div>
    <div class="col-12 col-md-10 offset-md-1 offset-lg-0 col-lg-5 col-xl-4">
        <form method="POST">
            <div class="border-1 border rounded-3 secao p-3 mt-3 mt-lg-0">
                <h5 class="text-center">Descrição da acomodação: </h5>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quam adipisci ex molestiae corporis
                    non in aperiam incidunt persp dolorum, voluptatem iusto reiciendis culpa illum
                    perferendis magni veniam at facilis ea!
                </p>
                <h5 class="text-center">Classifique o estabelecimento: </h5>
                <div class="estrelas justify-content-center w-100">
                    <i id="estrela1" onclick="avaliar1()"></i>
                    <i id="estrela2" onclick="avaliar2()"></i>
                    <i id="estrela3" onclick="avaliar3()"></i>
                    <i id="estrela4" onclick="avaliar4()"></i>
                    <i id="estrela5" onclick="avaliar5()"></i>
                </div>

                <h5 class="text-center mt-2">Adicionar avaliação: </h5>
                <textarea class="form-control shadow-none" style="resize: none;" asp-for="@Model.Comentario"
                    rows="3"></textarea>
                <span class="text-danger text-sm" asp-validation-for="@Model.Comentario"></span>
                <input type="hidden" asp-for="@Model.NotaAvaliacao">
                <span class="text-danger text-sm" asp-validation-for="@Model.NotaAvaliacao"></span>
                <input type="hidden" asp-for="@Model.FkAcomodacao">
                <input type="hidden" asp-for="@Model.FkCliente">

                <div class="row mt-3">

                    <div class="col-12 text-end"><button type="submit" class="btn btn-primary botao">Concluir</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
<script src="~/js/script_avaliar.js" defer></script>