@{
    Layout = "_LayoutVazio";
}

@model ImagemDeleteViewModel;

<div class="container">
        <div class="row align-items-center vh-100">
            <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4 border-1 border rounded-3 p-3 secao">
                <div class="py-2">
                    <div>
                        <h2 class="text-center">Excluir item</h2>
                    </div>
                    <hr>
                    <form method="post" asp-action="ProccesDeleteImagem">
                        <input type="hidden" asp-for="@Model.IdAcomodacao">
                        <input type="hidden" asp-for="@Model.CaminhoImagem">
                    <div>
                        <p class="text-center">Tem certeza que deseja excluir a imagem selecionada?</p>
                    </div>
                    <div style="text-align: center;"><a class="botao text-decoration-none" asp-action="Index">
                            Cancelar 
                        </a>
                        <button class="botao-vermelho" type="submit">
                            Excluir
                        </button>
                    </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>