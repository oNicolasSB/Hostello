@{
    Layout = "_LayoutVazio";
}
@model CadastroClienteViewModel
<div class="row align-items-center vh-100">
            <div class="col-12 col-md-8 col-lg-6 col-xxl-4 offset-md-2 offset-lg-3 offset-xl-3 offset-xxl-4 border-1 border rounded-3 p-3 secao">
                <div class="py-2">
                    <div>
                        <h2 class="py-2 text-center">Efetuar cadastro:</h1>
                    </div>
                    <div>
                        <div class="text-center">
                            <a class="botao-destaque shadow-none text-decoration-none selecionado">Para Você</a>
                            <a asp-action="Create" asp-controller="Responsavel" class="botao-destaque shadow-none text-decoration-none">Para sua empresa</a>
                        </div>

                        <div id="ent_usuario">
                            <form method="POST">
                                <div class="col-12">
                                    <div class="form-group py-2" >
                                        <label asp-for=@Model.Nome ><span id="nome" onclick="descricao(this)">Nome completo:</span></label>
                                        <input type="text" class="form-control shadow-none" asp-for=@Model.Nome>
                                    </div>
                                </div>


                                <div class="col-12">
                                    <div class="form-group py-2">
                                        <label asp-for=@Model.Email ><span id="email" onclick="descricao(this)">E-mail:</span></label>
                                        <input type="email" class="form-control shadow-none" asp-for=@Model.Email>
                                    </div>
                                </div>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="form-group py-2">
                                            <label  asp-for=@Model.Cpf ><span id="cpf" onclick="descricao(this)">CPF:</span></label>
                                            <input type="text" class="form-control shadow-none" asp-for=@Model.Cpf>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group py-2">
                                            <label asp-for=@Model.DataNascimento ><span id="dtnasc" onclick="descricao(this)">Data de nascimento:</span></label>
                                            <input type="date" class="form-control shadow-none"  asp-for=@Model.DataNascimento>
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for=@Model.Telefone ><span id="cel" onclick="descricao(this)">Telefone celular:</span></label>
                                            <input type="text" class="form-control shadow-none" asp-for=@Model.Telefone>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form">
                                            <label asp-for=@Model.Sexo ><span id="sexo" onclick="descricao(this)">Sexo:</span></label>
                                            <select class="form-select" asp-for=@Model.Sexo>
                                                <option value="1" selected>Masculino</option>
                                                <option value="2">Feminino</option>
                                                <option value="0">Prefiro não informar</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="form-group py-2">
                                            <label asp-for=@Model.Senha ><span id="senha" onclick="descricao(this)">Senha:</span></label>
                                            <input type="password" class="form-control shadow-none" asp-for=@Model.Senha>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group py-2">
                                            <label  asp-for=@Model.ConfSenha ><span id="confsenha" onclick="descricao(this)">Confirmar senha:</span></label>
                                            <input type="password" class="form-control shadow-none" asp-for=@Model.ConfSenha>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span id="message"></span>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="botao">Registrar</button>
                                    <p class="pt-2">Já tem uma conta? Efetue <a asp-action="Login" asp-controller="Home">Login</a></p>
                                </div>
                                <div asp-validation-summary="All">
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<script src="~/js/script_descricao.js" defer></script>