@model Contato

<div class="row py-2 border-1 border rounded-3 p-3 filtros secao">
    <div class="col-12">
        <div class="py-2">
            <div>
                <h1 class="py-2">Adicionar Contato:</h1>
            </div>
            <div>
                <form>
                    <div class="form-group py-2 text-align">
                        <label asp-for="@Model.Nome">Nome Completo:</label>
                        <input type="text" class="form-control shadow-none" id="nome"
                            placeholder="NÃ­colas Sanson Bassini" asp-for="@Model.Nome">
                    </div>
                    <div class="form-group py-2 text-align">
                        <label for="cadastro" asp-for="@Model.Telefone">Telefone/Celular:</label>
                        <input type="text" class="form-control shadow-none" id="telefone" placeholder="(XX) XXXXX-XXXX"  asp-for="@Model.Telefone">
                    </div>
                    <div class="form-group py-2 text-align">
                        <label for="cadastro" asp-for="@Model.Email">Email:</label>
                        <input type="text" class="form-control shadow-none" id="email" placeholder="nicleis@gmail.com"  asp-for="@Model.Email">
                    </div>
                    <div class="form-group py-2 text-align">
                        <label for="cadastro" asp-for="@Model.Cargo">Cargo:</label>
                        <input type="text" class="form-control shadow-none" id="cargo" placeholder="Gerente"  asp-for="@Model.Cargo">
                    </div>

                    <div class="py-4">
                        <button type="submit" class="btn btn-primary botao">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>